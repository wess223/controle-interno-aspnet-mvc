@model IEnumerable<WeW.WEB.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Categorias</h2>

<p>
    @Html.ActionLink("Cadastrar", "Cadastrar","", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            Ações
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        
        <td>
            @Html.ActionLink("Editar", "Alterar", new { id=item.Id }) |           
            @Html.ActionLink("Deletar", "Deletar", new { id=item.Id })
        </td>
    </tr>
}

</table>
